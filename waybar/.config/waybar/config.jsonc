        "spacing": 10
    },
    "clock": {
        // "timezone": "America/New_York",
        // "format": "{:ÔÄó %I:%M %p  Ôóµ %d/%m/%Y}",
        "format": "{:%H:%M %d/%m/%Y}",
        "tooltip-format": "<tt><big>{calendar}</big></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
