// -*- mode: jsonc -*-
{
    "layer": "top",
    "spacing": 6,
    "margin-top": 5,
    "margin-left": 10,
    "margin-right": 10,
    "margin-bottom": 5,
    "modules-left": [
        "custom/launcher",
        "disk",
        "cpu",
        "memory",
        "tray",
        "hyprland/window"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "custom/media", // TODO: find a way to detect machine. enable only for desktop ?
        // "idle_inhibitor",
        // "temperature", // FIXME: doesnt work
        // "bluetooth", // TODO: add
        "pulseaudio",
        "network",
        // "backlight",
        "battery",
        "clock",
        "custom/power"
    ],
    "hyprland/window": {
        "format": "{}",
        "max-length": 35, // TODO: check if enough or too much
        "rewrite": {
            "": "Hyprland"
        },
        "separate-outputs": true
    },
    "custom/launcher":{
        "format": "ÔåÉ ",
        "tooltip": false,
        "on-click": "rofi -show drun",
        "on-click-right": "killall rofi"
    },
    "hyprland/workspaces": {
        // "active-only": true,
        "disable-scroll": true,
        "warp-on-scroll": false,
        "format": "{name}",
        // TODO: find a way to detect machine and change accordingly
        "persistent-workspaces": {
            "DP-1": [ 1, 2, 3, 4, 5, 5, 6 ],
            "HDMI-A-1": [ 7, 8 ],
            "DP-2": [ 9, 10 ]
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "timezone": "Europe/Zurich",
        "format": "{:%H:%M ‚Ä¢ %d/%m/%Y}",
        "tooltip-format": "<tt><big>{calendar}</big></tt>",
        "calendar": {
            "mode"          : "month",
            "on-scroll"     : 1,
            "mode-mon-col"  : 3,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "interval": 1
    },
    "memory": {
        "format": "{}% \uf538",
        "interval": 1
    },
    "disk": {
        "format": "{free} \udb80\udeca",
        "unit": "GB",
        "interval": 30
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "interval": 1,
        "on-scroll-up": "light -A 5",
        "on-scroll-down": "light -U 5",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        // "interface": "enp10s0", // (Optional) To force the use of this interface
		// "tooltip": true,
        // "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format": "",
		"format-wifi": "Ôá´  {essid}",
		// "format-ethernet": "ethernet",
		// "format-linked": "linked",
		// "format-disabled": "disabled",
        "format-disconnected": " ‚ö† ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "scroll-step": 2,
        "format": "{icon} {volume}%",
        "format-muted": "Ó¨§",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "on-click": "playerctl play-pause",
        "exec": "$HOME/dotfiles/hyprland/.config/waybar/scripts/mediaplayer.py 2> /dev/null" // DONT FORGET TO MAKE THE SCRIPT EXECUTABLE
        // "exec": "$HOME/hyprland/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format" : "‚èª ",
		"tooltip": false,
        // "on-click": "wlogout" # FIXME: style bugged
		"menu": "on-click",
		"menu-file": "$HOME/dotfiles/hyprland/.config/waybar/power_menu.xml",
		"menu-actions": {
			"shutdown": "shutdown -h now",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"logout": "hyprctl dispatch exit"
		}
    },
    "bluetooth": {
        "format": "{icon}",
        "format-icons": ["Ôäî", "Û∞§æ", "Û∞•Ä", "Û∞•Ñ", "Û∞•à"],

        "tooltip-format-off": "Bluetooth is off",
        "tooltip-format-on": "Bluetooth is on",

        "format-connected": "{icon} {num_connections}",
        "format-connected-battery": "{icon} {device_battery_percentage}%",

        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_battery_percentage}%",

        "on-click": "blueman-manager"
    }
}
